<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" href="/assets/image/favikon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link type="text/css" rel="stylesheet" href="/assets/dist/css/adminlte.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/assets/dist/js/adminlte.min.js"></script>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <%- include('../layout/navbar') %>

        <!-- Sidebar -->
        <%- include('../layout/sidebar') %>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-4">
                        <div class="col-sm-12">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                <li class="breadcrumb-item active">Addresses</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="col-lg-12">
                        <div class="card shadow-sm">
                            <div class="card-header bg-secondary text-white">
                                <h3 class="card-title">List of Records</h3>
                            </div>

                            <div class="card-body table-responsive p-0">
                                <table class="table table-hover text-nowrap">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Sr.No</th>
                                            <th>Name</th>
                                            <th>Apartment Name</th>
                                            <th>Street No</th>
                                            <th>City</th>
                                            <th>State</th>
                                            <th>Postal Code</th>
                                            <th>Country</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (addresses && addresses.length > 0) { %>
                                            <% addresses.forEach(function(address, index) { %>
                                                <tr>
                                                    <td><%= (currentPage - 1) * itemsPerPage + index + 1 %></td> 
                                                    <td><%= address.userId.firstName %> <%= address.userId.lastName %></td>
                                                    <td><%= address.apartmentName %></td>
                                                    <td><%= address.streetNo %></td>
                                                    <td><%= address.city %></td>
                                                    <td><%= address.state %></td>
                                                    <td><%= address.postalCode %></td>
                                                    <td><%= address.country %></td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="8" class="text-center text-muted">No addresses available</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>

                                <!-- Pagination --> 
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-center mt-3">
                                        
                                        <!-- Previous Button -->
                                        <% if (currentPage > 1) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                                            </li>
                                        <% } else { %>
                                            <li class="page-item disabled">
                                                <a class="page-link" href="#" tabindex="-1">Previous</a>
                                            </li>
                                        <% } %>
                                        
                                        <!-- Page numbers -->
                                        <% for (let i = 1; i <= totalPages; i++) { %>
                                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                            </li>
                                        <% } %>
                                        
                                        <!-- Next Button -->
                                        <% if (currentPage < totalPages) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                                            </li>
                                        <% } else { %>
                                            <li class="page-item disabled">
                                                <a class="page-link" href="#" tabindex="-1">Next</a>
                                            </li>
                                        <% } %>
                                    </ul>
                                </nav>                                
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!-- Footer -->
        <%- include('../layout/footer') %>

    </div>
</body>

</html>
